<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Settings">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimun matching percentage"
        android:id="@+id/txtMinimunPercentage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:id="@+id/txtPercentage"
        android:layout_below="@+id/txtMinimunPercentage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarPercentage"
        android:layout_below="@+id/txtPercentage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/progressBarPercentage"
        android:id="@+id/view1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:id="@+id/txtNotifications"
        android:layout_toEndOf="@+id/txtPercentage"
        android:layout_marginLeft="29dp"
        android:layout_alignBottom="@+id/view2"
        android:layout_toRightOf="@+id/txtPercentage"
        android:layout_marginBottom="23dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchNotifications"
        android:checked="true"
        android:layout_alignBottom="@+id/txtNotifications"
        android:layout_alignLeft="@+id/switchSound"
        android:layout_alignStart="@+id/switchSound" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/view2"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:id="@+id/txtSound"
        android:layout_below="@+id/view2"
        android:layout_alignLeft="@+id/txtNotifications"
        android:layout_alignStart="@+id/txtNotifications"
        android:layout_marginTop="27dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchSound"
        android:checked="true"
        android:layout_toEndOf="@+id/txtMinimunPercentage"
        android:layout_marginLeft="23dp"
        android:layout_alignBottom="@+id/txtSound"
        android:layout_toRightOf="@+id/txtMinimunPercentage" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/view3"
        android:layout_marginTop="128dp"
        android:layout_below="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibration"
        android:id="@+id/txtVibration"
        android:layout_alignBottom="@+id/switch1"
        android:layout_alignLeft="@+id/txtSound"
        android:layout_alignStart="@+id/txtSound" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:checked="true"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/view3"
        android:layout_alignLeft="@+id/switchSound"
        android:layout_alignStart="@+id/switchSound" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/view4"
        android:layout_marginTop="193dp"
        android:layout_below="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/view5"
        android:layout_below="@+id/btnPrivacy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/view7"

        android:layout_below="@+id/btnAdvanced"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy"
        android:id="@+id/btnPrivacy"
        android:background="@android:color/transparent"
        android:layout_below="@+id/view4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advanced"
        android:background="@android:color/transparent"
        android:id="@+id/btnAdvanced"
        android:layout_below="@+id/view5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language"
        android:id="@+id/btnLanguage"
        android:layout_below="@+id/view7"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/view6"
        android:layout_alignBottom="@+id/btnLanguage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
